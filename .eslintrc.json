{
    "extends": [
        "plugin:import/errors",
        "plugin:import/warnings",
        "airbnb"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-var": "error",
        "comma-dangle": ["error", "never"],
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
        "global-require": 0
    },
    "env": {
        "browser": true,
        "jasmine": true
    }
}
